        .notification-header {
            display: flex;
            margin-bottom: 20px;
        }

        .notification-title {
            font-size: 20px;
            color: #2c3e50;
            font-weight: bold;
           margin: auto;
        }

        .notification-option {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 0;
            border-bottom: 1px solid #ddd;
        }

        .notification-option:last-child {
            border-bottom: none;
        }

        .notification-option label {
            font-size: 16px;
            font-weight: bold;
            color: #34495e;
            margin-bottom: 4px;
            display: block;
        }

        .notification-option p {
            font-size: 14px;
            color: #7f8c8d;
            margin: 0;
        }

        .toggle-switch {
            position: relative;
            display: inline-block;
            width: 50px;
            height: 24px;
        }

        .toggle-switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

        .slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #ccc;
            transition: .4s;
            border-radius: 24px;
        }

        .slider:before {
            position: absolute;
            content: "";
            height: 20px;
            width: 20px;
            border-radius: 50%;
            left: 4px;
            bottom: 2px;
            background-color: white;
            transition: .4s;
        }

        input:checked + .slider {
            background-color: #f39c12;
        }

        input:checked + .slider:before {
            transform: translateX(26px);
        }


