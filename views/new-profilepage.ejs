.back-to-home a {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border: 2px solid #69ba6b;
    border-radius: 12px;
    padding: 10px;
    width: 80px;
    text-decoration: none;
    transition: all 0.3s ease;
    background-color: transparent;
}

.back-to-home i {
    font-size: 22px;
    color: #69ba6b;
    margin-bottom: 5px;
    transition: color 0.3s ease;
}

.home-text {
    font-size: 12px;
    color: #69ba6b;
    font-weight: 500;
    transition: color 0.3s ease;
}

.back-to-home a:hover {
    background-color: #69ba6b;
    transform: translateY(-3px);
}

.back-to-home a:hover i,
.back-to-home a:hover .home-text {
    color: #ffffff;
}

/* Responsive */
@media (max-width: 480px) {
    .back-to-home a {
        width: 65px;
        padding: 10px;
    }
    .back-to-home i {
        font-size: 18px;
    }
    .home-text {
        font-size: 10px;
    }
