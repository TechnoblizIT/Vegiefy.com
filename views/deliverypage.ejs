  flex-grow: 1;
}

.search-bar input {
  width: 100%;
  padding: 8px 10px;
  border: none;
  border-radius: 5px 0 0 5px;
}

.search-bar button {
  background-color: #69ba6b;
  border: none;
  padding: 8px 15px;
  color: white;
  cursor: pointer;
  border-radius: 0 5px 5px 0;
}
/* dropdown for search bar */
.dropdown {
    display: none;
    position: absolute;
    background-color: white;
    border-radius: 5px;
    margin-top: 50px; 
    z-index: 1000; 
    width: 400px; 
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); 
