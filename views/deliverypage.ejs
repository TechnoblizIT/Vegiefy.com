.order-step::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-50%);
  width: 2px;
  height: 40px;
  background-color: lightgray;
  z-index: -1;
}

.order-step:last-child::after {
  display: none;
}

.step-1 .order-confirm {
  background-color: lightgray; /* Default state */
}

.step-1 .order-confirm.active {
  background-color: #4caf50; /* Completed state */
}

.step-2 .processing {
  background-color: lightgray; /* Default state */
}

.step-2 .processing.active {
  background-color: #4caf50; /* Completed state */
}

.step-3 .out-for-delivery {
  background-color: lightgray; /* Default state */
}

.step-3 .out-for-delivery.active {
  background-color: #4caf50; /* In-progress state */
}

.step-4 .delivered {
  background-color: lightgray; /* Default state */
}

.step-4 .delivered.active {
  background-color: #4caf50; /* Delivered state */
}

/* For connecting lines between steps */
.step-1::after, .step-2::after, .step-3::after, .step-4::after {
  content: "";
  display: block;
  width: 100%;
  height: 4px;
  background-color: lightgray; /* Default state */
}

.step-1.active::after, .step-2.active::after, .step-3.active::after, .step-4.active::after {
  background-color: #4caf50; /* Completed state */
}

