.order-confirm, .processing, .out-for-delivery ,.delivered{
  width: 20px;
  height: 20px;
  border-radius: 50%;
  background-color: lightgray;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 14px;
  color: white;
  font-weight: bold;
  margin-right: 15px;
