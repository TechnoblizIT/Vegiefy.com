     * {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Afacad', sans-serif;
  line-height: 1.6;
}

/* Header Styling */
header {
  background-color: #0f5256;
  color: #fff;
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 1000;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

/* Top Nav (Logo, Search Bar, Icons) */
.top-nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px 20px;
  max-width: 1200px;
  margin: 0 auto;
  
}

/* Logo and Search Container */
.logo-search-container {
  display: flex;
  align-items: center;
  flex-grow: 1;
}

.logo img {
  width: 110px;
  margin-right: 10px; 
}

.search-bar {
  display: flex;
  flex-grow: 1;
}

.search-bar input {
  width: 100%;
  padding: 8px 10px;
  border: none;
  border-radius: 5px 0 0 5px;
}

.search-bar button {
  background-color: #69ba6b;
  border: none;
  padding: 8px 15px;
  color: white;
  cursor: pointer;
  border-radius: 0 5px 5px 0;
}
/* dropdown for search bar */
.dropdown {
    display: none;
    position: absolute;
    background-color: white;
    border-radius: 5px;
    margin-top: 50px; 
    z-index: 1000; 
    width: 400px; 
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); 
}

.dropdown ul {
    list-style-type: none;
    padding: 0;
    margin: 0;
}

.dropdown li {
  padding: 5px;
  cursor: pointer;
  color: black;
}

.dropdown li:hover {
    background-color: #ecf7f0; 
    border-radius: 5px;
}
.nav-icons {
  display: flex;
  align-items: center;
}
.cart-icon,.profile-icon:hover{
 color: rgb(184, 180, 180);
}
.nav-icons a,
.hamburger-btn {
  color: white;
  font-size: 1.5rem;
  margin-left: 20px;
}

.cart-icon {
  display: flex;
  align-items: center; 
  position: relative; 
}

/* Cart Count Styles */
.cart-icon .cart-count {
  position: absolute;
  top: -10px; 
  right: -10px; 
  background-color: red;
  color: white;
  border-radius: 50%;
  padding: 0px 7px;
  font-size: 0.8rem;
}

/* Login Button */
.login-btn {
  background-color: white;
  color: #275360;
  padding: 7px 15px;
  border-radius: 5px;
  text-decoration: none;
  font-size: 15px;
  margin-left: 20px;
  cursor: pointer;
  border: 1px solid #fff;
  transition: 0.15s ease;
}

.login-btn:hover {
  color: #388e3c;
  border: 1px solid #388e3c;
  
}

/* logout button */
.logout-btn{
  background-color: white;
  color: #275360;
  padding: 7px 15px;
  border-radius: 5px;
  text-decoration: none;
  font-size: 15px;
  margin-left: 20px;
  cursor: pointer;
  border: 1px solid #fff;
}

.logout-btn:hover{
  color: #d9534f;
  border: 1px solid #d9534f ;
}
/* Bottom Nav (Helpline and Links) */
.bottom-nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #09343c;
  padding: 10px 20px;
}

.helpline {
  color: #fff;
  font-size: 20px;
}
.helpline a {
  margin-right: 10px; 
  text-decoration: none;
}

.helpline a i {
  color: #fff;
  font-size: 25px;
}
.helpline a i:hover{
  color: rgb(184, 180, 180);
}
.nav-links {
  list-style: none;
  display: flex;
  gap: 20px;
}

.nav-links a {
  color: #fff;
  text-decoration: none;
  font-size: 20px;
  transition: color 0.3s ease;
}
.nav-links a.nav-active {
  color: #69ba6b; 
  font-weight: bold;
}
.nav-links a:hover {
  color: #69ba6b;
}

/* Hamburger Icon Styling */
.hamburger-btn {
  display: none;
  font-size: 1.5rem;
  color: white;
  cursor: pointer;
}


/* Mobile Styling */
@media (max-width: 768px) {

  .top-nav {
    flex-direction: column;
    align-items: flex-start; 
  }

  .logo-search-container {
    width: 100%;
    justify-content: center; 
  }

  /* Search Bar Full Width */
  .search-bar {
    width: 80%; 
    margin: 10px 0;
  }
  .helpline{
    margin: auto;
    display: none;
  }
  .bottom-nav{
    background-color: transparent;
    padding: 0px;
  }
  .nav-icons {
    display: flex;
    justify-content: space-between;
    width: 100%; 
  }

  .hamburger-btn {
    margin-right: auto; 
  }
  .login-btn{
    margin: 0;
  }
 
  .hamburger-btn {
    display: block;
  }

 
  .nav-links {
    display: none;
    flex-direction: column;
    gap: 15px;
    background-color: #0f5256;
    position: absolute;
    top: 100%;
    left: 0;
    width: 100%;
    padding: 20px;
  }

 
  .nav-links.show-menu {
    display: flex;
  }
 
.horizontal-line {
  width: 100%;
  height: 1px; 
  background-color: #69ba6b;
  margin: 10px 0; 
}

hr {
  width: 100%;
  height: 1px; 
  background-color: #69ba6b; 
  border: none; 
  margin: 10px 0; 
}

}

/* css for product============================================================ */
.active {
    background-color: #69ba6b !important;
    font-weight: bold;
}
/* Sidebar for Larger Screens */
.sidebar {
    width: 175px;
    background: #0f5256;
    color: white;
    padding: 20px;
    position: fixed;
    height: 100%;
    overflow-y: auto;
}
.sidebar h2 {
    text-align: center;
    margin-bottom: 20px;
}
.category-buttons button {
    display: block;
    width: 100%;
    padding: 5px 10px;
    margin: 5px 0;
    border: none;
    background-color: transparent;
    color: white;
    cursor: pointer;
    text-align: left;
    border-radius: 5px;
    font-size: 14px;
}
.category-buttons button:hover {
    background-color: #69ba6b;
}

/* Fixed Mobile Menu */
.mobile-menu {
    display: none;
    background: #fff;
    color: #000;
    padding: 5px;
    text-align: center;
    position: fixed;  
    top: 135px;
    left: 0;
    width: 100%;
    z-index: 1;
}
.menu-icon {
    font-size: 24px;
    cursor: pointer;
    position: absolute;
    left: 15px;
    top: 5px;
}

/* Mobile Category Buttons (Dropdown) */
.mobile-category-buttons {
    display: none;
    position: fixed; 
    top: 180px; 
    left: 10px;
    width: 220px;
    background: #34495e;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
    padding: 5px;
    border-radius: 5px;
    z-index: 1000;
}
.mobile-category-buttons button {
    display: block;
    width: 100%;
    padding: 10px;
    margin: 5px 0;
    border: none;
    /* background-color: #2c3e50;
    color: white; */
    cursor: pointer;
    text-align: left;
    border-radius: 5px;
    font-size: 14px;
}
.mobile-category-buttons button:hover {
    background-color: #1abc9c;
}
.product-box {
    background-color: #fff;
    border: 1px solid #ddd; 
    border-radius: 5px; 
    padding: 10px; 
    width: 260px; 
    height: 450px;
    text-align: left; 
    box-shadow: 0 2px 5px rgba(0,0,0,0.1); 
    animation: fadeIn 0.6s ease-in-out; 
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.product-box:hover {
    transform: translateY(-5px); 
    box-shadow: 0 4px 10px rgba(0,0,0,0.2); 
}

.product-box img {
    width: 100%; 
    height: auto; 
}

.product-box h2 {
    font-size: 24px;
    margin: 10px 0;
    color: #333;
}

.product-box p {
    font-size: 16px;
    margin: 10px 0;
    color: #888;
}

.product-box button {
    padding: 0.5rem 1rem;
    background-color:  #0f5256;
    color: #fff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.product-box button:hover {
    background-color: #09343c;
}

.quantity-selecter {
    padding: 5px;
    font-size: 14px;
    border: 1px solid #ccc;
    border-radius: 4px;
    color: #adabab;
    cursor: pointer;
}

/* Main Content */
.main-content {
    margin-top: 110px;
    margin-left: 170px;
    padding: 20px;
    flex-grow: 1;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    position: relative;
    max-height: calc(100vh - 100px); 
    overflow-y: auto;
    padding-bottom: 20px;
}
.main-content::-webkit-scrollbar {
    display: none;
}
.product-container {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
    justify-content: center;
    padding: 10px;

}

.category-buttons button, 
.mobile-category-buttons button {
    display: flex;
    align-items: center;
    gap: 10px; 
}

.category-icon {
    width: 25px;  
    height: 25px;
}
/* Responsive Styles */
@media (max-width: 768px) {
    .sidebar {
        display: none;
    }
    .mobile-menu {
        display: block;
    }
    .main-content {
        margin-left: 0;
        margin-top: 180px; 
        overflow-y: hidden;
        padding: 5px;
        height: auto;
        max-height: none; 
    }
    .product-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 10px;  
        padding: 0px;
    }
    .product-box {
        width: calc(50% - 10px); 
        height: 370px;
        padding: 5px;
    }
   
    .product-box p{
        font-size: 14px;
        margin: 5px 0px;
    }
    .product-box h2 {
        font-size: 18px;
        margin: 0px;
    }
    .product-box button{
        padding: 5px 10px;
        margin-top: 5px;
        
    }
}

