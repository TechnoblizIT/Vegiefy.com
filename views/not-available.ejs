  display: flex;
  gap: 20px;
}

.nav-links a {
  color: #fff;
  text-decoration: none;
  font-size: 20px;
  transition: color 0.3s ease;
}
.nav-links a.nav-active {
  color: #69ba6b; 
  font-weight: bold;
}
.nav-links a:hover {
  color: #69ba6b;
}

/* Hamburger Icon Styling */
.hamburger-btn {
  display: none;
  font-size: 1.5rem;
  color: white;
  cursor: pointer;
}


/* Mobile Styling */
@media (max-width: 768px) {

  .top-nav {
    flex-direction: column;
    align-items: flex-start; 
