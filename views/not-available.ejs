  }
/* Header Styling */
header {
  background-color: #0f5256;
  color: #fff;
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 1000;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

/* Top Nav (Logo, Search Bar, Icons) */
.top-nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px 20px;
  max-width: 1200px;
  margin: 0 auto;
  
}

/* Logo and Search Container */
.logo-search-container {
  display: flex;
  align-items: center;
  flex-grow: 1;
}

.logo img {
  width: 110px;
  margin-right: 10px; 
}

.search-bar {
  display: flex;
  flex-grow: 1;
}

.search-bar input {
  width: 100%;
  padding: 8px 10px;
  border: none;
  border-radius: 5px 0 0 5px;
}

.search-bar button {
  background-color: #69ba6b;
  border: none;
  padding: 8px 15px;
  color: white;
  cursor: pointer;
  border-radius: 0 5px 5px 0;
}
/* dropdown for search bar */
.dropdown {
    display: none;
    position: absolute;
    background-color: white;
    border-radius: 5px;
    margin-top: 50px; 
    z-index: 1000; 
    width: 400px; 
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); 
}

.dropdown ul {
    list-style-type: none;
    padding: 0;
    margin: 0;
}

.dropdown li {
  padding: 5px;
  cursor: pointer;
  color: black;
}

.dropdown li:hover {
    background-color: #ecf7f0; 
    border-radius: 5px;
}
.nav-icons {
  display: flex;
  align-items: center;
}
.cart-icon,.profile-icon:hover{
 color: rgb(184, 180, 180);
}
.nav-icons a,
.hamburger-btn {
  color: white;
  font-size: 1.5rem;
  margin-left: 20px;
}

.cart-icon {
  display: flex;
  align-items: center; 
  position: relative; 
}

/* Cart Count Styles */
.cart-icon .cart-count {
  position: absolute;
  top: -10px; 
  right: -10px; 
  background-color: red;
  color: white;
  border-radius: 50%;
  padding: 3px 6px;
  font-size: 0.8rem;
}


/* Login Button */
.login-btn {
  background-color: white;
  color: #275360;
  padding: 7px 15px;
  border-radius: 5px;
  text-decoration: none;
  font-size: 15px;
  margin-left: 20px;
  cursor: pointer;
  border: 1px solid #fff;
  transition: 0.15s ease;
}

.login-btn:hover {
  color: #388e3c;
  border: 1px solid #388e3c;
  
}

/* logout button */
.logout-btn{
  background-color: white;
  color: #275360;
  padding: 7px 15px;
  border-radius: 5px;
  text-decoration: none;
  font-size: 15px;
  margin-left: 20px;
  cursor: pointer;
  border: 1px solid #fff;
}

.logout-btn:hover{
  color: #d9534f;
  border: 1px solid #d9534f ;
}
/* Bottom Nav (Helpline and Links) */
.bottom-nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #09343c;
  padding: 10px 20px;
}

.helpline {
  color: #fff;
  font-size: 20px;
}
.helpline a {
  margin-right: 10px; 
  text-decoration: none;
}

.helpline a i {
  color: #fff;
  font-size: 25px;
}
.helpline a i:hover{
  color: rgb(184, 180, 180);
